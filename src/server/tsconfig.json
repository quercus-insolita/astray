{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es5", "es6", "es7", "es2018", "es2019", "es2020", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "outDir": "../../dist",
    "resolveJsonModule": true
  },
  "include": [
    "*.ts",
    "**/*.ts"
  ]
}
